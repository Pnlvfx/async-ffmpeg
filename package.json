{
  "name": "async-ffmpeg",
  "description": "Node interaction with ffmpeg in node.js promise style.",
  "version": "2024.11.13",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/async-ffmpeg.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/ffmpeg.js",
  "module": "./dist/esm/ffmpeg.js",
  "types": "./dist/esm/ffmpeg.d.ts",
  "exports": {
    "types": "./dist/esm/ffmpeg.d.ts",
    "import": "./dist/esm/ffmpeg.js",
    "require": "./dist/cjs/ffmpeg.js"
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "generate:package.json": "tsx ./tools/generate-commonjs-package-json.ts dist/cjs/package.json",
    "unused": "tsx ./tools/unused.ts",
    "test": "rimraf coverage && jest --coverage",
    "lint": "eslint",
    "dev": "tsc -p tsconfig.build.json -w & node --watch ./dist/esm/ffmpeg.js",
    "build": "rimraf dist && eslint && yarn build:esm && yarn build:cjs && yarn generate:package.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.json --module CommonJS --moduleResolution Node --outDir dist/cjs",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "coraline": "github:Pnlvfx/coraline#workspace=@coraline/base",
    "eslint": "^9.19.0",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "peerDependencies": {
    "coraline": "*"
  },
  "packageManager": "yarn@4.6.0+sha512.5383cc12567a95f1d668fbe762dfe0075c595b4bfff433be478dbbe24e05251a8e8c3eb992a986667c1d53b6c3a9c85b8398c35a960587fbd9fa3a0915406728"
}
