  },
  "license": "MIT",
  "type": "module",
  "module": "./dist/ffmpeg.js",
  "types": "./dist/ffmpeg.d.ts",
  "exports": {
    "types": "./dist/ffmpeg.d.ts",
    "import": "./dist/ffmpeg.js"
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "unused": "node ./tools/unused.ts",
